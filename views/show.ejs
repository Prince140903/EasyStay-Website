<% layout("layouts/boilerplate") %>
<body>
  <h1 style="margin-left: 10%">Listing Details</h1>
  <br />
  <div class="show-box">
    <img src="<%= listing.image %>" alt="image" class="show-img" /><br />
    <div class="show-body">
      <b><%= listing.title %></b>
      <br />
      &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
      <%= listing.description %> <br />
      <%= listing.location %> <br />
      <%= listing.country %> <br />
    </div>
    <div class="btn-container">
      <form action="/listings/<%= listing._id %>/edit">
        <button class="addme" style="width: 90px">Edit</button>
      </form>
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="addme" style="background-color: black">Delete</button>
      </form>
    </div>
  </div>
</body>
